{
  "manifest_version": 3,
  "name": "NextClarity",
  "version": "2.8.7",
  "description": "Real-time video upscaling with advanced AI shaders including Anime4K, FSR, and more.",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "src/config.js",
        "src/utils/logger.js",
        "src/utils/webgl-utils.js",
        "src/utils/dom-utils.js",
        "src/utils/shader-utils.js",
        "src/utils/resolution-utils.js",
        "src/core/video-processor.js",
        "Model/debug.js",
        "Model/anime4k_fast.js",
        "Model/anime4k_hq.js",
        "Model/fsr.js",
        "Model/xbrz.js",
        "Model/cas.js",
        "Model/bicubic.js",
        "Model/lanczos3.js",
        "Model/realsr.js",
        "Model/esrgan.js",
        "src/content-main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/worker-main.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "net_request_rules.json"
      }
    ]
  }
}