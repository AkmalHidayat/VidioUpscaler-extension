{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true,
        "worker": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "script"
    },
    "globals": {
        "chrome": "readonly",
        "Anime4KShaders": "readonly",
        "Anime4KConfig": "readonly",
        "WebGLUtils": "readonly",
        "DOMUtils": "readonly",
        "ShaderUtils": "readonly",
        "ResolutionUtils": "readonly",
        "VideoProcessor": "readonly"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": [
            "warn",
            "never"
        ],
        "no-trailing-spaces": "warn",
        "eol-last": [
            "warn",
            "always"
        ]
    }
}